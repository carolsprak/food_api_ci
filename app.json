{
    "name": "Food API CI",
    "description": "Backend para cardápio de um restaurante",
    "repository": "https://github.com/carolsprak/food_api_ci.git",
    "keywords": ["API", "Food"],
    "scripts": {
      "postdeploy": "curl -o- 'https://dl-cli.pstmn.io/install/linux64.sh' | sh && npm install && node server.js"
    },
    "env": {
      "NODE_ENV": {
        "description": "Ambiente de produção da API",
        "value": "test"
      },
      "API_KEY": {
        "description": "Chave da API",
        "value": "${{ secrets.API_KEY }}"
      }
    },
    "formation": {
      "web": {
        "quantity": 1,
        "size": "Standard-1X"
      }
    },
    "environments": {
      "test": {
        "scripts": {
          "postdeploy": "npm install --production=false && NODE_ENV=test npm install"
        }
      }
    }
} 